<h2>main</h2>
<h3>posts</h3>
<table id="listTable">
  <thead>
    <tr>
      <th>글번호</th>
      <th>작성자</th>
      <th>제목</th>
      <th>작성일</th>
    </tr>
  </thead>
  <tbody>
    <% for(i=0; i<list.length; i++) { %> 
    <tr>
      <td><%=i+1 %></td>
      <td><%=list[i].author %></td>
      <td id="brdNo<%=list[i].board_no %>">
        <a href="/post/view/<%=list[i].board_no %>">
          <%=list[i].board_title %>
        </a>
      </td>
      <td>
        <%=list[i].created_at.toLocaleDateString() %>
      </td>
    </tr>
    <% } %> 
  </tbody>
</table>

<form id="writeFrom" action="/post" method="post">
  <label for="author">이름</label>
  <input id="author" type="text" name="author">
  <label for="boardTitle">글제목</label>
  <input id="boardTitle" type="text" name="board_title">
  <label for="boardContent">내용</label>
  <textarea id="boardContent" type="text" name="board_content"></textarea>
  <button type="submit">전송</button>
</form>