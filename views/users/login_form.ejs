<section>
  <div class="wrap">
    <h4 style="text-align:center; margin:0 0 25px">LOGIN</h4>
    <% if(session.user) {%>
    <form action="/logout" id="logoutForm" method="GET">
      <button class="btn btn-secondary mb-3 mt-3" type="submit">LOGOUT</button>
    </form>
    <% } else { %>
    <form action="/login" id="loginForm" method="POST">
      <div class="mb-3">
        <input class="form-control" id="loginName" type="text" name="login_name" />
      </div>
      <div class="mb-3">
        <input class="form-control" id="loginPassword" type="password" name="login_password" />
      </div>
      <button class="btn btn-secondary mb-3 mt-3" type="submit">LOGIN</button>
    </form>
    <% } %> 
  </div>
</section>