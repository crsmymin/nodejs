<!-- signup form -->
<form action="/signup" id="signupForm" method="POST">
  <div class="mb-3">
    <label class="form-label" for="">아이디</label>
    <input class="form-control" type="text" name="user_name" required>
  </div>
  <div class="mb-3">
    <label class="form-label" for="">이메일</label>
    <input class="form-control" type="email" name="user_email" required>
  </div>
  <div class="mb-3">
    <label class="form-label" for="">비밀번호</label>
    <input class="form-control" type="password" name="password" required>
  </div>
  <div class="mb-3">
    <label class="form-label" for="">비밀번호 확인</label>
    <input class="form-control" type="password" name="confirm_password" required>
  </div>
  <button class="btn btn-secondary mb-3" type="submit">SIGNUP</button>
</form>
<!-- signup form -->